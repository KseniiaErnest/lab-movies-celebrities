<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{title}}</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
    <nav>
      
      {{#if theUserObject}}
      <h1>Hey, {{theUserObject.username}}</h1>
      {{/if}}

      <a href="/">Home</a>

      {{#if theUserObject}}
      <a href="/celebrities/create">Add Celebrity</a>
      {{/if}}
      <a href="/celebrities/all-celebrities">All Celebrities</a>

      <a href="/movies/all-movies">All Movies</a>
          {{#if theUserObject}}
       <a href="/movies/create">Add Movie</a>
      {{/if}}
     
      <a href="/signup">Sign Up</a>

      {{#if theUserObject}}
      <form style="display:inline" action="/logout" method="POST"><button>Logout</button></form>
      {{else}}
      <a href="/login">Login</a>
      {{/if}}

      {{#if theUserObject}}
      <a href="/userProfile">User Profile</a>
      {{/if}}

     {{#if isAdmin}}
     <a href="/all-users">All Users</a>
     {{/if}}

    </nav>

{{#if errorMessage}}
         <div style="background-color:#d13838">
            {{errorMessage}}
         </div>
      {{/if}}

      {{#if successMessage}}
         <div style="background-color:#42f557">
            {{successMessage}}
         </div>
      {{/if}}

    <div class="container">
      {{{body}}}
    </div>

    <script src="/javascripts/script.js"></script>
  </body>

</html>